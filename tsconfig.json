{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    /* Based on https://github.com/rollup/plugins/blob/master/tsconfig.base.json */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "pretty": true,
    "sourceMap": true,
    "strict": false,
    "target": "es2017",
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "./types"
  },
  "include": ["./lib/plugin.ts"]
}
